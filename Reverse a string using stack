#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>

#define true 1
#define false 0
typedef struct stack
{
	int capacity;
	int top;
	char *arr;
}stack;

stack *
createStack (int capacity)
{
	stack *s = (stack *) malloc (sizeof(stack()));
	
	if (s == NULL) return NULL;
	s->top = -1; s->capacity = capacity;
	s->arr = (char *) malloc (sizeof (char) * capacity);
	return s;
}

bool
isFull(stack *s)
{
	if (s->capacity - 1 == s->top)
	{
		return true;
	}
	else
	{
		return false;
	}
}
void
push (stack *s, char data)
{
	if (isFull(s)) return;
	s->arr[++s->top] = data;
	printf ("\nPush to stack: %c", data);
}

bool
isEmpty(stack *s)
{
	if (s->top == -1) return true;
	else
	  return false;
}
int
pop (stack *s)
{
	if (isEmpty(s)) return -1;
	return s->arr[s->top--];
	
}
int main()
{
	char *ch = "geeks";
	int len = strlen(ch), i;
	stack *s =  createStack(len);
	
	for (i = 0; i < len; i++)
		push(s, ch[i]);
	
	printf ("\n\nReverse string:\n\n");
	for (i = 0; i < len; i++)
		printf ("%c", pop(s));
	
	return 0;
}
