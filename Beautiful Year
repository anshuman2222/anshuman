#include <iostream>
using namespace std;

int main()
{
    int no;
    cin>>no;
    int tmp = no + 1, s;

    while (1)
    {
        s = tmp;
        int a = tmp % 10; tmp /= 10;
        int b = tmp % 10; tmp /= 10;
        int c = tmp % 10; tmp /= 10;
        int d = tmp % 10; tmp /= 10;

        if ((a != b) && (a != c) && (a != d) && (b != c) && (b != d) && (c != d))
        {
            cout<<s<<"\n";
            break;
        }
        tmp = s + 1;
        if (tmp > 9013)
            break;
    }
    return 0;
}
